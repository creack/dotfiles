# -*- mode: sh -*-

# Emacs
alias emacs="emacsclient -a ''  -ct"
alias e="emacs"

# Go related
alias gml="gometalinter -t --vendor --deadline=5m ./..."

# Better, faster, ...
alias grep="grep --color=auto -n"
alias bc="bc -q -l $HOME/.bcrc"
alias a64="encode64"
alias d64="decode64"
alias rm="rm -v"
alias j="jobs"

# Load personal aliases.
[ -f "$HOME/.zsh_alias.perso" ] && source $HOME/.zsh_alias.perso
