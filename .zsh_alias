# -*- mode: sh -*-

# Emacs
alias emacs="emacsclient -a ''  -ct"
alias e="emacs"

# Go related
alias gml="gometalinter -t --vendor --deadline=5m ./..."

# Ls
alias ls="gls --color --group-directories-first --quoting-style=literal"
alias l="ls -lh"
alias ll="ls -l"
alias la="ls -lhA"

# Better, faster, ...
alias grep="grep --color=auto -n"
alias bc="bc -q -l $HOME/.bcrc"
alias a64="encode64"
alias d64="decode64"
alias rm="rm -v"
alias j="jobs"
